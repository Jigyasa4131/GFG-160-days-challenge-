class Solution {
    static final int MOD = 1_000_000_007;

    public int[] productQueries(int n, int[][] queries) {
        // Step 1: Extract powers array from bits of n
        List<Integer> powersList = new ArrayList<>();
        for (int i = 0; i < 31; i++) { // n <= 1e9 < 2^31
            if ((n & (1 << i)) != 0) {
                powersList.add(1 << i);
            }
        }

        int m = powersList.size();
        long[] prefix = new long[m];
        prefix[0] = powersList.get(0) % MOD;

        // Step 2: Prefix products modulo MOD
        for (int i = 1; i < m; i++) {
            prefix[i] = (prefix[i - 1] * powersList.get(i)) % MOD;
        }

        int[] ans = new int[queries.length];

        // Step 3: Answer queries
        for (int i = 0; i < queries.length; i++) {
            int l = queries[i][0];
            int r = queries[i][1];
            if (l == 0) {
                ans[i] = (int) prefix[r];
            } else {
                long inv = modPow(prefix[l - 1], MOD - 2); // modular inverse
                ans[i] = (int) ((prefix[r] * inv) % MOD);
            }
        }
        return ans;
    }

    // Fast exponentiation for modular inverse
    private long modPow(long base, long exp) {
        long res = 1;
        base %= MOD;
        while (exp > 0) {
            if ((exp & 1) != 0) res = (res * base) % MOD;
            base = (base * base) % MOD;
            exp >>= 1;
        }
        return res;
    }
}
