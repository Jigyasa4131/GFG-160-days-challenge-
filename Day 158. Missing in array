class Solution {
    int missingNum(int arr[]) {
        int n = arr.length + 1;  // size of full permutation

        int xor1 = 0, xor2 = 0;

        // XOR of all numbers from 1 to n
        for (int i = 1; i <= n; i++) {
            xor1 ^= i;
        }

        // XOR of all array elements
        for (int num : arr) {
            xor2 ^= num;
        }

        // Missing number is xor1 ^ xor2
        return xor1 ^ xor2;
    }
}
