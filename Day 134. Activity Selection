class Solution {
    public int activitySelection(int[] start, int[] finish) {
        // code here
        int n = start.length;
        
        // Pair activities (finish time first for easy sorting)
        int[][] activities = new int[n][2];
        for (int i = 0; i < n; i++) {
            activities[i][0] = start[i];
            activities[i][1] = finish[i];
        }
        
        // Sort by finish time
        Arrays.sort(activities, (a, b) -> a[1] - b[1]);
        
        // Greedy selection
        int count = 1; // First activity always selected
        int lastFinish = activities[0][1];
        
        for (int i = 1; i < n; i++) {
            if (activities[i][0] > lastFinish) { // strictly greater
                count++;
                lastFinish = activities[i][1];
            }
        }
        
        return count;
    }
}
