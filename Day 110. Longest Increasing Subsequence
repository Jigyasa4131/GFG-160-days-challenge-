class Solution {
    static int lis(int arr[]) {
        int n = arr.length;
        ArrayList<Integer> temp = new ArrayList<>();

        for (int num : arr) {
            int idx = Collections.binarySearch(temp, num);
            if (idx < 0) idx = -idx - 1; // find insertion point
            if (idx == temp.size()) {
                temp.add(num);
            } else {
                temp.set(idx, num);
            }
        }

        return temp.size();
    }
}
